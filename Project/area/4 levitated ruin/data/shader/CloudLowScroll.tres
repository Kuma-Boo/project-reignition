[resource]
code = "shader_type spatial;
render_mode diffuse_burley, unshaded, fog_disabled;

global uniform float time;

uniform sampler2D albedo : source_color, hint_default_black;
uniform vec4 tint : source_color;
uniform float scroll_speed : hint_range(0.0, 0.1, 0.01) = .02;

void fragment()
{
	vec2 main_uv = UV + vec2(0, time * scroll_speed);
	vec4 col = texture(albedo, main_uv);

	vec2 detail_uv = UV2 + vec2(0, time * scroll_speed);
	vec4 detail_col = texture(albedo, detail_uv);
	col.rgb = mix(col.rgb, detail_col.rgb, detail_col.a);
	
	ALBEDO = col.rgb * tint.rgb + COLOR.rgb;
	ALPHA = col.a * COLOR.a * tint.a;
}
"
